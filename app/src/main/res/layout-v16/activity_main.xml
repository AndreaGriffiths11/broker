<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/Marcus"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/marcus" />

    <ImageView
        android:id="@+id/Iwan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/Marcus"
        android:layout_marginTop="11dp"
        android:adjustViewBounds="true"
        android:background="#424242"
        android:src="@drawable/iwan" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:padding="22dp"
        android:text="Iwan Griffiths"
        android:textColor="#F5F5F5"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/StoreNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="Iwan.Griffiths@marcusandmillichap.com"
        android:textColor="#F5F5F5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/StoreNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="Contact: 407-601-9524"
        android:textColor="#F5F5F5"
        android:textSize="16sp"
        android:textStyle="bold" />
    </RelativeLayout>